.col-sm-5
    .dataTables_info#editable_info(role="status", aria-live="polite").
        Showing !{paginator.firstResult() + 1} to !{paginator.lastResult() + 1} of !{paginator.getTotalResults()} entries

if(paginator.showPagination())
    .col-sm-7
        .dataTables_paginate.paging_simple_numbers(id="editable_paginate", style="float:right")
            ul.pagination

                //
                    li.paginate_button
                        a(href="?page=1") First

                if(paginator.hasPreviousPage())
                    li.paginate_button.previous#editable_previous
                        a(href="?page=" + paginator.getPreviousPage()) Previous
                else
                    li.paginate_button.next(id="editable_next", class="disabled")
                        a(href="#") Previous

                - var i = 1;
                while i <= paginator.totalPages()
                    li.paginate_button(class=i == paginator.getCurrentPage() ? 'active' : '')
                        a(href="?page=" + i) !{i}

                    - i++

                if(paginator.hasNextPage())
                    li.paginate_button.next(id="editable_next")
                        a(href="?page=" + paginator.getNextPage()) Next
                else
                    li.paginate_button.next(id="editable_next", class="disabled")
                        a(href="#") Next

                //
                    li.paginate_button
                        a(href="?page=" + paginator.getLastPage()) Last